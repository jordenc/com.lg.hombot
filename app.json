{
    "id": "com.lg.hombot",
    "name": {
        "en": "LG Hombot",
        "nl": "LG Hombot"
    },
    "version": "0.9.6",
    "compatibility": "0.x || 1.x",
    "author": {
        "name": "Chamid Media",
        "email": "info@chamidmedia.nl"
    },
    "images": {
      "large": "./assets/images/large.jpg",
      "small": "./assets/images/small.jpg"
    },
    "category": "appliances",
    "description": {
    	"en": "Control your LG Hombot vacuumcleaner with Homey",
		"nl": "Bestuur je LG Hombot stofzuiger met Homey"
    },
    "dependencies": {
    		"net": "*"
    },
    "drivers": [
        {
            "id": "vacuum",
            "name": {
	        	"en": "LG Hombot",
	        	"nl": "LG Hombot"  
            },
            "images": {
              	"large": "drivers/vacuum/assets/images/large.jpg",
			  	"small": "drivers/vacuum/assets/images/small.jpg"
          	},
            "class": "other",
            "capabilities": [],
            "pair": [
                {
                    "id": "start"
                },
                {
                    "id": "list_devices",
                    "template": "list_devices",
                    "navigation": {
                        "next": "add_cleaner"
                    }
                },
                {
                    "id": "add_cleaner",
                    "template": "add_devices"
                }
            ],
            "settings": [
                {
                    "type": "group",
                    "label": {
                        "en": "General settings",
                        "nl": "Algemene instellingen"
                    },
                    "children": [
	                    {
	                        "id": "ipaddress",
	                        "type": "text",
	                        "label": {
	                            "en": "IP address",
	                            "nl": "IP adres"
	                        },
	                        "value": "0.0.0.0"
	                    }
	                ]
	            }
	        ]
        }
    ], 
    "flow": {
        "actions": [
        {
            "id": "start",
            "title": {
                "en": "Start cleaning",
                "nl": "Stofzuigen starten"
            },
            "args": [
	              {
	                "name": "device",
	                "type": "device",
	                "placeholder": {
	                  "en": "Select vacuum cleaner",
	                  "nl": "Selecteer stofzuiger"
	                },
	                "filter": "driver_id=vacuum"
	              }
	        ]
        },
        {
            "id": "pause",
            "title": {
                "en": "Pause cleaning",
                "nl": "Uitschakelen/standby"
            },
            "args": [
	              {
	                "name": "device",
	                "type": "device",
	                "placeholder": {
	                  "en": "Select vacuum cleaner",
	                  "nl": "Selecteer stofzuiger"
	                },
	                "filter": "driver_id=vacuum"
	              }
	        ]
        },
        {
            "id": "gohome",
            "title": {
                "en": "Return to homestation",
                "nl": "Terug naar laadstation"
            },
            "args": [
	              {
	                "name": "device",
	                "type": "device",
	                "placeholder": {
	                  "en": "Select vacuum cleaner",
	                  "nl": "Selecteer stofzuiger"
	                },
	                "filter": "driver_id=vacuum"
	              }
	        ]
        },
        {
            "id": "backward",
            "title": {
                "en": "Move 50cm (20 inches) backwards",
                "nl": "Ga 50cm achteruit"
            },
            "args": [
	              {
	                "name": "device",
	                "type": "device",
	                "placeholder": {
	                  "en": "Select vacuum cleaner",
	                  "nl": "Selecteer stofzuiger"
	                },
	                "filter": "driver_id=vacuum"
	              }
	        ]
        },
        {
            "id": "forward",
            "title": {
                "en": "Move 50cm (20 inches) forward",
                "nl": "Ga 50cm vooruit"
            },
            "args": [
	              {
	                "name": "device",
	                "type": "device",
	                "placeholder": {
	                  "en": "Select vacuum cleaner",
	                  "nl": "Selecteer stofzuiger"
	                },
	                "filter": "driver_id=vacuum"
	              }
	        ]
        },
        {
            "id": "left",
            "title": {
                "en": "Turn left",
                "nl": "Keer links"
            },
            "args": [
	              {
	                "name": "device",
	                "type": "device",
	                "placeholder": {
	                  "en": "Select vacuum cleaner",
	                  "nl": "Selecteer stofzuiger"
	                },
	                "filter": "driver_id=vacuum"
	              }
	        ]
        },
        {
            "id": "right",
            "title": {
                "en": "Turn right",
                "nl": "Keer rechts"
            },
            "args": [
	              {
	                "name": "device",
	                "type": "device",
	                "placeholder": {
	                  "en": "Select vacuum cleaner",
	                  "nl": "Selecteer stofzuiger"
	                },
	                "filter": "driver_id=vacuum"
	              }
	        ]
        },
        {
            "id": "cleanmode",
            "title": {
                "en": "Set clean mode",
                "nl": "Stel modus in"
            },
            "args": [
	              {
	                "name": "mode",
	                "type": "dropdown",
	                "values": [
                        {
                            "id": "CLEAN_SPOT",
                            "label": {
                                "en": "Spiral Spot mode",
                                "nl": "Spiraal vlek stand"
                            }
                        },
                        {
                            "id": "CLEAN_SB",
                            "label": {
                                "en": "Cell-by-cell mode",
                                "nl": "Cell by Cell -stand"
                            }
                        },
                        {
                            "id": "CLEAN_ZZ",
                            "label": {
                                "en": "ZigZag mode",
                                "nl": "Zigzag-stand"
                            }
                        }
                    ]
	              },
	              {
	                "name": "device",
	                "type": "device",
	                "placeholder": {
	                  "en": "Select vacuum cleaner",
	                  "nl": "Selecteer stofzuiger"
	                },
	                "filter": "driver_id=vacuum"
	              }
	        ]
        },
        {
            "id": "turbo",
            "title": {
                "en": "Set turbo mode",
                "nl": "Stel turbo stand"
            },
            "args": [
	              {
	                "name": "mode",
	                "type": "dropdown",
	                "values": [
                        {
                            "id": "true",
                            "label": {
                                "en": "On",
                                "nl": "Aan"
                            }
                        },
                        {
                            "id": "false",
                            "label": {
                                "en": "Off",
                                "nl": "Uit"
                            }
                        }
                    ]
	              },
	              {
	                "name": "device",
	                "type": "device",
	                "placeholder": {
	                  "en": "Select vacuum cleaner",
	                  "nl": "Selecteer stofzuiger"
	                },
	                "filter": "driver_id=vacuum"
	              }
	        ]
        },
        {
            "id": "repeat",
            "title": {
                "en": "Set repeat",
                "nl": "Herhaling"
            },
            "args": [
	              {
	                "name": "mode",
	                "type": "dropdown",
	                "values": [
                        {
                            "id": "true",
                            "label": {
                                "en": "On",
                                "nl": "Aan"
                            }
                        },
                        {
                            "id": "false",
                            "label": {
                                "en": "Off",
                                "nl": "Uit"
                            }
                        }
                    ]
	              },
	              {
	                "name": "device",
	                "type": "device",
	                "placeholder": {
	                  "en": "Select vacuum cleaner",
	                  "nl": "Selecteer stofzuiger"
	                },
	                "filter": "driver_id=vacuum"
	              }
	        ]
        }
        
       ],
        "conditions": [
        {
            "id": "cleaning",
            "title": {
                "en": "!{{is|is not}} cleaning",
                "nl": "!{{is|is niet}} aan het stofzuigen"
            },
            "args": [
	              {
	                "name": "device",
	                "type": "device",
	                "placeholder": {
	                  "en": "Select vacuum cleaner",
	                  "nl": "Selecteer stofzuiger"
	                },
	                "filter": "driver_id=vacuum"
	              }
	        ]
        },
        {
            "id": "reachable",
            "title": {
                "en": "!{{is|is not}} reachable",
                "nl": "!{{is|is niet}} bereikbaar"
            },
            "args": [
	              {
	                "name": "device",
	                "type": "device",
	                "placeholder": {
	                  "en": "Select vacuum cleaner",
	                  "nl": "Selecteer stofzuiger"
	                },
	                "filter": "driver_id=vacuum"
	              }
	        ]
        },
         {
            "id": "homing",
            "title": {
                "en": "!{{is|is not}} heading to docking station",
                "nl": "!{{is|is niet}} onderweg naar laadstation"
            },
            "args": [
	              {
	                "name": "device",
	                "type": "device",
	                "placeholder": {
	                  "en": "Select vacuum cleaner",
	                  "nl": "Selecteer stofzuiger"
	                },
	                "filter": "driver_id=vacuum"
	              }
	        ]
        },
         {
            "id": "docking",
            "title": {
                "en": "!{{is|is not}} docking",
                "nl": "!{{is|is niet}} het laadstation aan het betreden"
            },
            "args": [
	              {
	                "name": "device",
	                "type": "device",
	                "placeholder": {
	                  "en": "Select vacuum cleaner",
	                  "nl": "Selecteer stofzuiger"
	                },
	                "filter": "driver_id=vacuum"
	              }
	        ]
        },
        {
            "id": "charging",
            "title": {
                "en": "!{{is|is not}} charging",
                "nl": "!{{is|is niet}} aan het opladen"
            },
            "args": [
	              {
	                "name": "device",
	                "type": "device",
	                "placeholder": {
	                  "en": "Select vacuum cleaner",
	                  "nl": "Selecteer stofzuiger"
	                },
	                "filter": "driver_id=vacuum"
	              }
	        ]
        }
       ]

    }
}
