{
    "id": "com.lg.hombot",
    "name": {
        "en": "LG Hombot",
        "nl": "LG Hombot"
    },
    "version": "0.9.3",
    "compatibility": "0.x || 1.x",
    "author": {
        "name": "Chamid Media",
        "email": "info@chamidmedia.nl"
    },
    "images": {
      "large": "./assets/images/large.jpg",
      "small": "./assets/images/small.jpg"
    },
    "category": "appliances",
    "description": {
    	"en": "Control your LG Hombot vacuumcleaner with Homey",
		"nl": "Bestuur je LG Hombot stofzuiger met Homey"
    },
    "dependencies": {
    		"net": "*"
    },
    "drivers": [
        {
            "id": "vacuum",
            "name": {
	        	"en": "LG Hombot",
	        	"nl": "LG Hombot"  
            },
            "images": {
              	"large": "drivers/vacuum/assets/images/large.jpg",
			  	"small": "drivers/vacuum/assets/images/small.jpg"
          	},
            "class": "vacuum",
            "capabilities": [ "" ],
            "pair": [
                {
                    "id": "start"
                },
                {
                    "id": "list_devices",
                    "template": "list_devices",
                    "navigation": {
                        "next": "add_cleaner"
                    }
                },
                {
                    "id": "add_cleaner",
                    "template": "add_devices"
                }
            ]
        }
    ], 
    "flow": {
        "actions": [
        {
            "id": "start",
            "title": {
                "en": "Start cleaning",
                "nl": "Stofzuigen starten"
            },
            "placeholder": {
              "en": "Select device",
              "nl": "Selecteer apparaat"
            },
			"filter": "driver_id=vacuum"
        },
        {
            "id": "pause",
            "title": {
                "en": "Pause cleaning",
                "nl": "Uitschakelen/standby"
            },
            "placeholder": {
              "en": "Select device",
              "nl": "Selecteer apparaat"
            },
			"filter": "driver_id=vacuum"
        },
        {
            "id": "gohome",
            "title": {
                "en": "Return to homestation",
                "nl": "Terug naar laadstation"
            },
            "placeholder": {
              "en": "Select device",
              "nl": "Selecteer apparaat"
            },
			"filter": "driver_id=vacuum"
        }
       ],
        "conditions": [
        {
            "id": "cleaning",
            "title": {
                "en": "is cleaning",
                "nl": "is aan het stofzuigen"
            },
            "placeholder": {
              "en": "Select device",
              "nl": "Selecteer apparaat"
            },
			"filter": "driver_id=vacuum"
        },
        {
            "id": "unreachable",
            "title": {
                "en": "is unreachable",
                "nl": "is onbereikbaar"
            },
            "placeholder": {
              "en": "Select device",
              "nl": "Selecteer apparaat"
            },
			"filter": "driver_id=vacuum"
        },
        {
            "id": "charging",
            "title": {
                "en": "is charging",
                "nl": "is aan het opladen"
            },
            "placeholder": {
              "en": "Select device",
              "nl": "Selecteer apparaat"
            },
			"filter": "driver_id=vacuum"
        }
       ]

    }
}
